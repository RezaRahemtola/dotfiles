{
	// Epitech settings
	"epitech-c-cpp-headers.username": "Reza Rahemtola",
	"epitech-c-cpp-headers.login": "reza.rahemtola@epitech.eu",
	"epitech-c-cpp-headers.headerType": "post2017",
	"epitech-c-cpp-headers.autoGenerateClasses": false,
	"epitech-c-cpp-headers.usePragmaOnce": true,
	"editor.rulers": [80],


	// Git
	"git.autofetch": "all",
	"git.autofetchPeriod": 600,
	"git.autoStash": true,
	"git.confirmSync": false,
	"git.fetchOnPull": true,
	"git.postCommitCommand": "push",


	// Editor
	"editor.bracketPairColorization.enabled": false,
	"editor.codeActionsOnSave": [
		"addMissingImports",
		"source.organizeImports",
		"source.fixAll"
	],
	"editor.inlineSuggest.enabled": true,
	"editor.linkedEditing": true,
	"editor.minimap.enabled": false,
	"editor.stickyScroll.enabled": true,


	// Files
	"files.autoSave": "onFocusChange",
	"files.exclude": {
		"**/*.gcda": true,
		"**/*.gcno": true,
		"**/*.o": true,
		"**/unit_tests": true
	},
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,


	// VSCode
	"diffEditor.ignoreTrimWhitespace": false,
	"explorer.confirmDragAndDrop": false,
	"telemetry.telemetryLevel": "off",
	"terminal.integrated.defaultProfile.linux": "fish",
	"update.mode": "start",
	"workbench.iconTheme": "material-icon-theme",


	// --- Language specific settings ---

	// TypeScript / JavaScript
	"typescript.updateImportsOnFileMove.enabled": "always",
	"[javascript][typescript][javascriptreact][typescriptreact]": {
		"editor.tabSize": 2,
		"editor.detectIndentation": false,
		"editor.insertSpaces": false
	},

	// Go
	"go.toolsManagement.autoUpdate": true,

	// Python
	"[python]": {
		"editor.formatOnSave": true
	},
	"python.analysis.typeCheckingMode": "basic",
	"python.analysis.completeFunctionParens": true,
	"python.experiments.enabled": false,
	"python.formatting.provider": "black",
	"python.linting.pylintEnabled": true,

	// Svelte
	"[svelte]": {
		"editor.defaultFormatter": "svelte.svelte-vscode"
	},
	"svelte.enable-ts-plugin": true,

	// Markdown / Text
	"[markdown][plaintext]": {
		"files.trimFinalNewlines": false,
		"files.insertFinalNewline": false,
		"files.trimTrailingWhitespace": false
	},
	"markdown.validate.enabled": true,

	// C / C++
	"C_Cpp.autocompleteAddParentheses": true,
	"C_Cpp.vcFormat.newLine.beforeElse": false,
	"C_Cpp.vcFormat.newLine.beforeOpenBrace.function": "newLine",


	// --- Extensions settings ---

	// ESLint
	"eslint.validate": ["javascript", "vue", "typescript"],

	// Sonarlint
	"sonarlint.disableTelemetry": true,

	// Trailing Spaces
	"trailing-spaces.highlightCurrentLine": false,

	// Live Server
	"liveServer.settings.donotShowInfoMsg": true,

	// Path Intellisense
	"path-intellisense.autoSlashAfterDirectory": true,
	"path-intellisense.showHiddenFiles": true,

	// Gitlens
	"gitlens.codeLens.enabled": false,
	"gitlens.currentLine.pullRequests.enabled": false,
	"gitlens.currentLine.enabled": false,
	"gitlens.hovers.currentLine.over": "line",
	"gitlens.hovers.currentLine.enabled": false,
	"gitlens.rebaseEditor.ordering": "asc",
	"gitlens.statusBar.pullRequests.enabled": false,
	"gitlens.views.showRelativeDateMarkers": false,
	"gitlens.views.commits.avatars": false,

	// GitHub Copilot
	"github.copilot.enable": {
		"[markdown][plaintext][json][yaml][jsonc]": false
	},

	// Code Spell Checker
	"cSpell.enabledLanguageIds": [
		"markdown",
		"plaintext"
	],
	"cSpell.showStatus": false
}
